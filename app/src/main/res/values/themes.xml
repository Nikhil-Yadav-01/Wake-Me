<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Splash Screen Theme -->
    <style name="Theme.WakeMe.Splash" parent="Theme.SplashScreen">
        <!-- Futuristic gradient background -->
        <item name="windowSplashScreenBackground">@drawable/splash_background</item>

        <!-- Use your custom futuristic clock icon -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/futuristic_clock_splash</item>

        <!-- Optional animation duration -->
        <item name="windowSplashScreenAnimationDuration">400</item>

        <!-- The theme to apply after splash -->
        <item name="postSplashScreenTheme">@style/Theme.WakeMe</item>
    </style>

    <!-- Main App Theme -->
    <style name="Theme.WakeMe" parent="android:Theme.Material.Light.NoActionBar">
        <!-- Customize as you like -->
    </style>
</resources>
