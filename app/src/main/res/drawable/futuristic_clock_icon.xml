<vector xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    android:width="80dp"
    android:height="80dp"
    android:viewportWidth="24"
    android:viewportHeight="24">

    <!-- Hex frame: Opaque neon gradients -->
    <path
        android:pathData="M12,3 L17.5,6.2 L17.5,12 L12,15.2 L6.5,12 L6.5,6.2 Z"
        android:strokeWidth="1.6"
        android:fillColor="#00000000"
        android:strokeLineJoin="round">
        <aapt:attr name="android:strokeColor">
            <gradient android:type="linear"
                android:startX="6" android:startY="6"
                android:endX="18" android:endY="18">
                <item android:offset="0" android:color="#FF00E5FF"/>
                <item android:offset="1" android:color="#FFFF4D8D"/>
            </gradient>
        </aapt:attr>
    </path>

    <!-- Inner plate: Brighter contrast -->
    <path
        android:pathData="M12,6.2 L15.8,8.4 L15.8,11.8 L12,14 L8.2,11.8 L8.2,8.4 Z">
        <aapt:attr name="android:fillColor">
            <gradient android:type="linear"
                android:startX="9" android:startY="7"
                android:endX="15" android:endY="13">
                <item
                    android:offset="0"
                    android:color="#771CE0" />
                <item
                    android:offset="1"
                    android:color="#A02D2D" />
            </gradient>
        </aapt:attr>
    </path>

    <!-- Hour hand: solid white -->
    <path
        android:pathData="M12,11 L10.5,9"
        android:strokeWidth="1.0"
        android:strokeLineCap="round"
        android:fillColor="#00000000"
        android:strokeColor="#3BA71D" />

    <!-- Minute hand: solid white -->
    <path
        android:pathData="M12,11 L15.2,8.8"
        android:strokeWidth="1.0"
        android:strokeLineCap="round"
        android:fillColor="#00000000"
        android:strokeColor="#FFFFFFFF" />

    <!-- Wake waveform: Opaque, bright gradient -->
    <path
        android:pathData="M4,18 C5.2,17 6.4,17.8 7.6,17 C8.8,16.2 10,17.2 11.2,16.4 C12.4,15.6 13.6,16.6 14.8,15.8 C16,15 17.2,16 18.4,15.2"
        android:strokeWidth="1.4"
        android:fillColor="#00000000"
        android:strokeLineCap="round"
        android:strokeLineJoin="round">
        <aapt:attr name="android:strokeColor">
            <gradient android:type="linear"
                android:startX="4" android:startY="16"
                android:endX="18.4" android:endY="18">
                <item android:offset="0" android:color="#FF6A00FF"/>
                <item android:offset="1" android:color="#FF00FFC6"/>
            </gradient>
        </aapt:attr>
    </path>
</vector>
